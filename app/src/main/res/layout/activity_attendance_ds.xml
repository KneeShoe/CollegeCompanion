    <TextView
        android:id="@+id/class_attended"
        android:layout_width="174dp"
        android:layout_height="66dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="257dp"
        android:text="Classes Attended : "
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.269"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/total_classes"
        android:layout_width="174dp"
        android:layout_height="66dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="257dp"
        android:text="Total Classes :"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.269"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/class_attended" />

    <TextView
        android:id="@+id/estimate"
        android:layout_width="339dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:hint="Estimate"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_classes" />

    <TextView
        android:id="@+id/ca"
        android:layout_width="123dp"
        android:layout_height="58dp"
        android:layout_marginTop="300dp"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toEndOf="@+id/class_attended"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tc"
        android:layout_width="123dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toEndOf="@+id/class_attended"
        app:layout_constraintTop_toBottomOf="@+id/ca" />


<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/subjectname1"
        android:layout_width="185dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@+id/guess1"
        app:layout_constraintEnd_toStartOf="@+id/attendbar1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:hint="Subject 1" />

    <ProgressBar
        android:id="@+id/attendbar1"
        style="?android:attr/progressBarStyle"
        android:layout_width="59dp"
        android:layout_height="58dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/attended1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/attended1"
        android:layout_width="49dp"
        android:layout_height="37dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="162dp"
        android:text="A"
        app:layout_constraintStart_toEndOf="@+id/guess1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/missed1"
        android:layout_width="49dp"
        android:layout_height="37dp"
        android:layout_marginEnd="26dp"
        android:text="M"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="162dp" />

    <TextView
        android:id="@+id/guess1"
        android:layout_width="206dp"
        android:layout_height="30dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subjectname1"
        tools:hint="Approx" />
</android.support.constraint.ConstraintLayout>